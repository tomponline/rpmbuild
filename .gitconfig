[user]
	email = tomp@tomp.uk
	name = tomponline
[color]
       	ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
	meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[core]
      	editor = nano
        excludesfile = ~/.gitignore
        hooksPath = ~/.git/hooks/

[push]
	default = matching
